zi() {
  cd "$(zoxide query -i)"
}

zd() {
  if [ $# -eq 0 ]; then
    builtin cd ~ && return
  elif [ -d "$1" ]; then
    builtin cd "$1"
  else
    z "$@" && printf "\U000F17A9 " && pwd
  fi
}

open() {
  xdg-open "$@" >/dev/null 2>&1 &
}

cp2c() {
  if [[ -z "$1" ]]; then
    echo "Usage: cp2c <file>" >&2
    return 1
  fi

  wl-copy < "$1"
}

c2f() {
  if [[ -z "$1" ]]; then
    echo "Usage: create-from-clip <filename>" >&2
    return 1
  fi
  wl-paste > "$1"
}
